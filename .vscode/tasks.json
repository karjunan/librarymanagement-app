{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TSC",
            "type": "shell",
            "command": "tsc",
            "args": [
                "--target",
                "ES5",
                "--outDir",
                "js",
                "--sourceMap",
                "--watch",
                "app.ts"
            ],
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}